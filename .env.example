# =============================================================================
# PillInfo API Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_TITLE="PillInfo Drug Lookup API"
API_VERSION="1.0.0"
DEBUG=True

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST="0.0.0.0"
PORT=8000

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# For development: allow all origins
CORS_ORIGINS="*"
# For production: specify allowed origins (comma-separated)
# CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# -----------------------------------------------------------------------------
# Anthropic API (Claude OCR)
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# RxNorm API Configuration
# -----------------------------------------------------------------------------
RXNORM_BASE_URL="https://rxnav.nlm.nih.gov/REST"
RXNORM_TIMEOUT=10

# -----------------------------------------------------------------------------
# OpenFDA API Configuration
# -----------------------------------------------------------------------------
OPENFDA_BASE_URL = "https://api.fda.gov/drug/label.json"
OPENFDA_TIMEOUT = 10

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
CACHE_FILE="data/cached_labels.json"
CACHE_TTL_SECONDS=86400
ENABLE_CACHE=True

# -----------------------------------------------------------------------------
# Machine Learning Models
# -----------------------------------------------------------------------------
# Hugging Face NER Model
NER_MODEL_NAME="Clinical-AI-Apollo/Medical-NER"

# Fuzzy Matching
FUZZY_MATCH_THRESHOLD=70

# -----------------------------------------------------------------------------
# OCR Configuration
# -----------------------------------------------------------------------------
# Image optimization settings
MAX_IMAGE_DIMENSION=1600
MAX_IMAGES_PER_REQUEST=5

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/jpg,image/webp"

# -----------------------------------------------------------------------------
# Dosage Calculator
# -----------------------------------------------------------------------------
STANDARD_ADULT_WEIGHT_KG=70.0
YOUNGS_RULE_CONSTANT=12

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"